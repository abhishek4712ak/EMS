<%- include('./superAdmin_header.ejs') %>

<title>manage-events</title>

<style>
  :root {
    --accent: #06b6d4;
    --accent2: #7c3aed;
    --danger: #ff5f5f;
    --muted: #9aa8b2;
    --glass: rgba(255,255,255,0.06);
    --glass2: rgba(255,255,255,0.03);
    --border: rgba(255,255,255,0.12);
    --text-light: #e9f0ff;
  }

  body {
    background: linear-gradient(135deg,#0f172a,#111827,#0a0f1c);
    background-attachment: fixed;
  }

  /* Container */
  .sa-wrap {
    max-width: 1200px;
    margin: 2.5rem auto;
    padding: 1rem;
    animation: fadeIn .6s ease;
  }

  @keyframes fadeIn {
    from { opacity:0; transform:translateY(18px); }
    to   { opacity:1; transform:translateY(0); }
  }

  /* Panel */
  .panel {
    background: var(--glass);
    padding: 2rem;
    border-radius: 18px;
    backdrop-filter: blur(15px);
    border: 1px solid var(--border);
    box-shadow: 0 0 45px rgba(0,0,0,0.4);
    transition: .3s ease;
  }

  .panel:hover {
    box-shadow: 0 0 65px rgba(0,0,0,0.55);
    transform: translateY(-4px);
  }

  /* Title */
  .panel h2 {
    font-size: 1.7rem;
    margin-bottom: 1.3rem;
    font-weight: 800;
    background: linear-gradient(90deg,var(--accent),var(--accent2));
    -webkit-background-clip: text;
	background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Form Row */
  .form-row {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .form-row input,
  .form-row select {
    flex: 1;
    min-width: 200px;
    padding: .75rem 1rem;
    background: var(--glass2);
    border: 1px solid var(--border);
    border-radius: 12px;
    color: white;
    transition: .25s ease;
  }

  .form-row input:focus,
  .form-row select:focus {
    border-color: var(--accent);
    background: rgba(255,255,255,0.08);
    box-shadow: 0 0 10px rgba(6,182,212,.3);
    outline: none;
  }

  /* Buttons */
  button {
    background: linear-gradient(140deg,var(--accent),var(--accent2));
    border: none;
    color: #fff;
    font-weight: 700;
    padding: .75rem 1.4rem;
    border-radius: 12px;
    cursor: pointer;
    box-shadow: 0 0 15px rgba(6,182,212,.25);
    transition: .28s ease;
  }

  button:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 25px rgba(6,182,212,.4);
  }

  .action-btn {
    background: #1f2937;
    color: #fff;
    padding: .55rem .9rem;
    border-radius: 10px;
    font-size: .9rem;
    text-decoration:none;
    transition:.2s ease;
  }

  .action-btn:hover {
    background: #334155;
  }

  .delete-btn {
    background: var(--danger);
    color: #fff;
    padding: .55rem .9rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-size: .9rem;
    transition:.2s ease;
  }

  .delete-btn:hover {
    background: #ff3b3b;
    transform: translateY(-2px);
  }

  /* Table Section */
  .list {
    margin-top: 2rem;
  }

  .list h3 {
    font-size: 1.35rem;
    margin-bottom: 1rem;
    font-weight: 700;
    color: var(--text-light);
    border-left: 4px solid var(--accent);
    padding-left: .6rem;
  }

  table {
    width: 100%;
    background: var(--glass2);
    border-radius: 12px;
    overflow: hidden;
    backdrop-filter: blur(10px);
    border-collapse: collapse;
  }

  th {
    padding: 1rem;
    text-align: left;
    background: rgba(255,255,255,0.08);
    border-bottom: 1px solid rgba(255,255,255,0.1);
    color: var(--text-light);
  }

  td {
    padding: .9rem 1rem;
    border-bottom: 1px solid rgba(255,255,255,0.06);
    color: var(--muted);
    transition: .2s ease;
  }

  tr:hover td {
    background: rgba(255,255,255,0.07);
    color: #fff;
  }

  /* Modal */
  .modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(5,10,20,0.85);
    display: none;
    align-items: center;
    justify-content: center;
    animation: fadeIn .3s ease;
    z-index: 99999;
  }

  .modal-box {
    background: rgba(20,28,43,0.95);
    padding: 2rem;
    border-radius: 15px;
    width: 350px;
    text-align: center;
    color: var(--text-light);
    box-shadow: 0 10px 45px rgba(0,0,0,.6);
    animation: scaleIn .25s ease;
    border: 1px solid var(--border);
  }

  @keyframes scaleIn {
    from { opacity:0; transform:scale(.75); }
    to   { opacity:1; transform:scale(1); }
  }

  .modal-actions {
    margin-top: 1.6rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
  }


  /* Modern Select Styling */
.form-row select {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;

    flex: 1;
    min-width: 200px;
    padding: .8rem 1rem;
    padding-right: 2.8rem;

    background: linear-gradient(135deg, rgba(255,255,255,0.06), rgba(255,255,255,0.03));
    border: 1px solid var(--border);
    border-radius: 12px;
    color: #fff;
    font-size: 1rem;
    cursor: pointer;
    transition: .25s ease;

    /* custom arrow icon */
    background-image:
        url("data:image/svg+xml,<svg fill='%23bcd7ff' height='24' viewBox='0 0 24 24' width='24' xmlns='http://www.w3.org/2000/svg'><path d='M7 10l5 5 5-5'/></svg>");
    background-repeat: no-repeat;
    background-position: right 1rem center;
    background-size: 18px;
}

/* Hover effect */
.form-row select:hover {
    border-color: var(--accent);
    box-shadow: 0 0 15px rgba(6,182,212,.35);
}

/* Focus effect */
.form-row select:focus {
    outline: none;
    border-color: var(--accent2);
    background: rgba(255,255,255,0.1);
    box-shadow: 0 0 15px rgba(124,58,237,.4);
}

/* Dropdown Option Style */
.form-row select option {
    background: #0f172a;           /* matches your theme background */
    color: #e5eeff;
    padding: 14px;
    border-bottom: 1px solid rgba(255,255,255,0.08);
    font-size: 1rem;
}

/* Highlighted option when hovered in dropdown */
.form-row select option:hover {
    background: rgba(6,182,212,0.25) !important;
    color: #fff;
}

/* Selected option inside dropdown list */
.form-row select option:checked {
    background: rgba(124,58,237,0.35) !important;
    color: #fff;
}

/* Mobile optimization */
@media(max-width: 850px) {
    .form-row select {
        font-size: .95rem;
        padding: .75rem 1rem;
    }
}



  .modal-btn {
    flex: 1;
    padding: .7rem;
    border-radius: 10px;
    border: none;
    cursor: pointer;
    font-weight: 700;
    transition: .2s;
  }

  .modal-btn.confirm {
    background: var(--danger);
    color: white;
  }

  .modal-btn.confirm:hover {
    background: #ff3c3c;
  }

  .modal-btn.cancel {
    background: #1e2734;
    color: var(--muted);
  }

  .modal-btn.cancel:hover {
    background: #2b3447;
  }

  /* Responsive */
  @media(max-width: 850px) {
    .form-row {
      flex-direction: column;
    }
    table td, table th {
      padding: .7rem;
    }
  }
</style>



<div class="sa-wrap">

  <% if (typeof message !== 'undefined' && message) { %>
    <div style="
      background:rgba(6,182,212,0.15);
      padding:1rem;
      border-radius:12px;
      color:#06b6d4;
      text-align:center;
      font-weight:700;
      margin-bottom:1.2rem;
      backdrop-filter:blur(6px);">
      <%= message %>
    </div>
  <% } %>

  <div class="panel">
    <h2><%= event && event._id ? 'Edit Event' : 'Add Event' %></h2>

    <!-- Form -->
    <form method="POST" action="<%= event && event._id ? '/superadmin/addEvents/edit/' + event._id : '/superadmin/addEvents' %>">
      <div class="form-row">
        <input type="text" name="event" placeholder="Event Name" required value="<%= event ? event.event : '' %>">
        <select name="type" required>
          <option value="">Type</option>
          <option value="individual" <%= event?.type === 'individual' ? 'selected' : '' %>>Individual</option>
          <option value="team" <%= event?.type === 'team' ? 'selected' : '' %>>Team</option>
        </select>
        <input type="text" name="venue" placeholder="Venue" value="<%= event ? event.venue : '' %>">
        <input type="text" name="time" placeholder="Time" value="<%= event ? event.time : '' %>">
        <input type="number" name="limit" min="0" placeholder="Limit" value="<%= event?.limit ?? '' %>">
        
        <button type="submit">
          <%= event && event._id ? 'Update Event' : 'Add Event' %>
        </button>

        <% if (event && event._id) { %>
          <a class="action-btn" href="/superadmin/addEvents">Cancel</a>
        <% } %>
      </div>
    </form>

    <!-- Modal -->
    <div id="delete-modal" class="modal-backdrop">
      <div class="modal-box">
        <h3>Delete Event?</h3>
        <p style="color:var(--muted); margin-top:.4rem;">This action cannot be undone.</p>
        <div class="modal-actions">
          <button class="modal-btn confirm" id="modal-confirm-btn">Delete</button>
          <button class="modal-btn cancel" id="modal-cancel-btn">Cancel</button>
        </div>
      </div>
    </div>

    <!-- List -->
    <div class="list">
      <h3>All Events</h3>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Venue</th>
            <th>Time</th>
            <th>Limit</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (events?.length) { %>
            <% events.forEach(ev => { %>
              <tr>
                <td><%= ev.event %></td>
                <td><%= ev.type %></td>
                <td><%= ev.venue %></td>
                <td><%= ev.time %></td>
                <td><%= ev.limit ?? '-' %></td>
                <td>
                  <a href="/superadmin/addEvents/edit/<%= ev._id %>" class="action-btn">Edit</a>

                  <form method="POST" action="/superadmin/addEvents/delete" class="delete-event-form" style="display:inline;">
                    <input type="hidden" name="id" value="<%= ev._id %>">
                    <button type="button" class="delete-btn">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" style="text-align:center; padding:1rem; color:var(--muted);">No events found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<script>
  // Delete modal
  let modal = document.getElementById('delete-modal');
  let confirmBtn = document.getElementById('modal-confirm-btn');
  let cancelBtn = document.getElementById('modal-cancel-btn');
  let formToDelete = null;

  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      formToDelete = btn.closest('form');
      modal.style.display = 'flex';
    });
  });

  confirmBtn.onclick = () => {
    if (formToDelete) formToDelete.submit();
    modal.style.display = 'none';
  };

  cancelBtn.onclick = () => {
    modal.style.display = 'none';
  };

  window.addEventListener('keydown', e => {
    if (e.key === 'Escape') modal.style.display = 'none';
  });
</script>
