<%- include('./superAdmin_header.ejs') %>


<title>superAdmin Dashboard</title>
<style>
  :root {
    /* Modern Color Tokens */
    --c-glass: rgba(255, 255, 255, 0.06);
    --c-glass-2: rgba(255, 255, 255, 0.04);
    --c-border: rgba(255, 255, 255, 0.15);
    --c-accent: #06b6d4;
    --c-accent-2: #7c3aed;
    --c-muted: #9ca3af;
    --c-text-light: #f0f6ff;
    --c-bg: linear-gradient(160deg, #0d1321, #0b1120, #111827 60%);

    --radius-large: 22px;
    --radius-medium: 16px;
  }

  body {
    background: var(--c-bg);
    background-size: cover;
    min-height: 100vh;
    padding-bottom: 2rem;
  }

  /* Fade + Lift Animation */
  @keyframes softFade {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .sa-container {
    max-width: 1400px;
    margin: 2.5rem auto;
    padding: 1rem;
    animation: softFade 0.8s ease;
  }

  /* PANEL (main wrapper) */
  .panel {
    background: var(--c-glass);
    border-radius: var(--radius-large);
    padding: 2rem;
    border: 1px solid var(--c-border);
    backdrop-filter: blur(18px) brightness(1.1);
    position: relative;
    overflow: hidden;
    transition: .35s ease;
    box-shadow: 0 0 60px rgba(0,0,0,0.45);
  }

  /* Glow Edge */
  .panel::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 2px;
    background: linear-gradient(135deg, var(--c-accent), var(--c-accent-2));
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    -webkit-mask-composite: xor;
    opacity: .08;
    transition: .4s;
  }

  .panel:hover::before {
    opacity: 0.20;
  }

  .panel:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 80px rgba(0,0,0,0.55);
  }

  /* HERO — Enhanced */
  .sa-hero {
    background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.04));
    border-radius: var(--radius-large);
    padding: 2rem;
    border: 1px solid var(--c-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
    box-shadow: inset 0 0 30px rgba(255,255,255,0.06);
    animation: softFade 1.1s ease;
  }

  .avatar {
    width: 85px;
    height: 85px;
    border-radius: 20px;
    background: linear-gradient(145deg, var(--c-accent), var(--c-accent-2));
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2.6rem;
    font-weight: 900;
    color: white;
    box-shadow: 0 0 25px rgba(6,182,212,0.25);
    transition: .3s ease;
  }

  .avatar:hover {
    transform: scale(1.05) rotate(3deg);
  }

  .sa-hero h1 {
    font-size: 2.1rem;
    font-weight: 900;
    margin: 0;
    background: linear-gradient(90deg, var(--c-accent), var(--c-accent-2));
    -webkit-background-clip: text;
    background-clip: text;
    background-clip: text;
    background-clip: text;
    background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .sa-hero p {
    color: var(--c-muted);
    font-size: 1rem;
    margin-top: .2rem;
  }

  /* GRID — Floating metric cards */
  .metrics-grid {
    margin-top: 2rem;
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .metric-card {
    background: var(--c-glass-2);
    padding: 1.5rem;
    border-radius: var(--radius-medium);
    border: 1px solid var(--c-border);
    position: relative;
    overflow: hidden;
    cursor: pointer;
    transition: .3s ease;
    transform-style: preserve-3d;
  }

  /* Glow holo layer */
  .metric-card::before {
    content: "";
    position: absolute;
    top: -40%;
    left: -30%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(6,182,212,0.22), transparent 65%);
    opacity: 0;
    transition: .4s ease;
  }

  .metric-card:hover::before {
    opacity: 1;
    transform: scale(1.15);
  }

  .metric-card:hover {
    transform: translateY(-8px) scale(1.03);
    box-shadow: 0 0 50px rgba(6,182,212,0.25);
    border-color: var(--c-accent);
  }

  .label {
    color: var(--c-muted);
    font-size: 1rem;
    font-weight: 600;
  }

  .value {
    margin-top: .45rem;
    font-size: 2.6rem;
    font-weight: 900;
    background: linear-gradient(90deg, var(--c-accent), var(--c-accent-2));
    background-clip: "text";
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .meta {
    margin-top: .4rem;
    color: var(--c-muted);
    font-size: .9rem;
  }

  /* TABLE — glow & smooth scroll */
  .recent {
    margin-top: 2.8rem;
  }

  .recent h3 {
    color: var(--c-text-light);
    margin-bottom: 1rem;
    font-size: 1.4rem;
    font-weight: 800;
    border-left: 5px solid var(--c-accent);
    padding-left: .7rem;
  }

  .recent table {
    width: 100%;
    background: var(--c-glass-2);
    border-radius: 18px;
    border-collapse: collapse;
    overflow: hidden;
    backdrop-filter: blur(14px);
    box-shadow: 0 0 45px rgba(0,0,0,0.4);
  }

  .recent th {
    background: rgba(255,255,255,0.10);
    padding: 1rem;
    color: var(--c-text-light);
    text-align: left;
    border-bottom: 1px solid rgba(255,255,255,0.12);
  }

  .recent td {
    padding: 1rem;
    color: var(--c-muted);
    border-bottom: 1px solid rgba(255,255,255,0.08);
    transition: .25s ease;
  }

  .recent tr:hover td {
    background: rgba(255,255,255,0.07);
    color: white;
  }

  /* Responsive Fixes */
  @media(max-width: 900px) {
    .sa-hero {
      flex-direction: column;
      text-align: center;
    }
    .avatar {
      margin-bottom: 1rem;
    }
  }
</style>

<div class="sa-container">
  <div class="panel">

    <!-- HERO -->
    <div class="sa-hero">
      <div class="left">
        <div class="avatar"><%= username ? username.charAt(0).toUpperCase() : 'S' %></div>
        <div>
          <h1>Welcome, <%= username || 'SuperAdmin' %></h1>
          <p>Your personalized dashboard overview</p>
        </div>
      </div>
    </div>

    <!-- METRICS -->
    <div class="metrics-grid">
      <div class="metric-card">
        <div class="label">Total Users</div>
        <div class="value"><%= usersCount ?? '—' %></div>
        <div class="meta">Registered in the system</div>
      </div>

      <div class="metric-card">
        <div class="label">Admins</div>
        <div class="value"><%= adminsCount ?? '—' %></div>
        <div class="meta">Active admin accounts</div>
      </div>

      <div class="metric-card">
        <div class="label">SuperJC</div>
        <div class="value"><%= superJcCount ?? '—' %></div>
        <div class="meta">Total SuperJC units</div>
      </div>

      <div class="metric-card">
        <div class="label">Events</div>
        <div class="value"><%= eventsCount ?? '—' %></div>
        <div class="meta">Total system events</div>
      </div>
    </div>

  </div>
</div>
