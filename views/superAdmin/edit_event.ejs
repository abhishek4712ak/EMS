<%- include('./superAdmin_header.ejs') %>


<style>
  :root {
    --accent: #06b6d4;
    --accent2: #7c3aed;
    --danger: #ff5f5f;
    --muted: #9aa8b2;
    --glass: rgba(255,255,255,0.06);
    --glass2: rgba(255,255,255,0.03);
    --border: rgba(255,255,255,0.12);
    --text-light: #e9f0ff;
  }

  body {
    background: linear-gradient(135deg,#0f172a,#111827,#0a0f1c);
    font-family: 'Segoe UI', sans-serif;
    margin: 0;
    padding: 0;
    color: var(--text-light);
  }

  .sa-container {
    max-width: 700px;
    margin: 3rem auto;
    padding: 1rem;
    animation: fadeIn 0.6s ease;
  }

  @keyframes fadeIn {
    from { opacity:0; transform:translateY(20px); }
    to { opacity:1; transform:translateY(0); }
  }

  h1 {
    font-size: 1.8rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    background: linear-gradient(90deg, var(--accent), var(--accent2));
    -webkit-background-clip: text;
    background-clip: "text";
    -webkit-text-fill-color: transparent;
  }

  p {
    margin-bottom: 1.5rem;
    color: var(--muted);
  }

  form {
    background: var(--glass);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border);
    backdrop-filter: blur(15px);
    box-shadow: 0 0 45px rgba(0,0,0,0.4);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  form:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 65px rgba(0,0,0,0.55);
  }

  label {
    font-weight: 600;
    margin-bottom: 0.3rem;
    display: block;
  }

  input, select {
    width: 100%;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    border: 1px solid var(--border);
    background: var(--glass2);
    color: #fff;
    font-size: 1rem;
    transition: border-color 0.25s ease, box-shadow 0.25s ease, background 0.25s ease;
    margin-bottom: 1rem;
  }

  input:focus, select:focus {
    border-color: var(--accent);
    background: rgba(255,255,255,0.08);
    box-shadow: 0 0 12px rgba(6,182,212,0.3);
    outline: none;
  }

  button {
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    border: none;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    color: #fff;
    background: linear-gradient(140deg,var(--accent),var(--accent2));
    box-shadow: 0 0 15px rgba(6,182,212,0.25);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  button:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 25px rgba(6,182,212,0.4);
  }

  a.cancel-btn {
    margin-left: 1rem;
    color: var(--accent);
    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a.cancel-btn:hover {
    color: var(--accent2);
  }

  @media(max-width: 500px) {
    .sa-container {
      margin: 2rem 1rem;
      padding: 0.5rem;
    }

    form {
      padding: 1.5rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    input, select, button {
      font-size: 0.95rem;
      padding: 0.6rem 0.9rem;
    }
  }

  /* Developer button styles moved to shared partial (partials/dev_button.ejs) */
</style>

<div class="sa-container">
  <h1><%= event && event._id ? 'Edit Event' : 'Add Event' %></h1>
  <p>Welcome, <%= username %></p>
  <form method="POST" action="<%= event && event._id ? '/superadmin/addEvents/edit/' + event._id : '/superadmin/addEvents' %>">
    <label for="event">Event Name</label>
    <input type="text" id="event" name="event" maxlength="100" required value="<%= event ? event.event : '' %>" />

    <label for="type">Type</label>
    <select id="type" name="type" required>
      <option value="">Select Type</option>
      <option value="individual" <%= event && event.type === 'individual' ? 'selected' : '' %>>Individual</option>
      <option value="team" <%= event && event.type === 'team' ? 'selected' : '' %>>Team</option>
    </select>

    <label for="venue">Venue</label>
    <input type="text" id="venue" name="venue" maxlength="100" value="<%= event ? event.venue : '' %>" />

    <label for="time">Time</label>
    <input type="text" id="time" name="time" maxlength="50" value="<%= event ? event.time : '' %>" />

    <label for="limit">Participant Limit</label>
    <input type="number" id="limit" name="limit" min="0" value="<%= event && event.limit !== undefined ? event.limit : '' %>" />

    <button type="submit"><%= event && event._id ? 'Update Event' : 'Add Event' %></button>
    <a href="/superadmin/addEvents" class="cancel-btn">Cancel</a>
  </form>
</div>
