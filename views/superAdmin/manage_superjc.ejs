<%- include('./superAdmin_header.ejs') %>


<title>manage-superJc</title>

<style>
  :root {
    --glass: rgba(255,255,255,0.05);
    --glass2: rgba(255,255,255,0.03);
    --border: rgba(255,255,255,0.12);
    --accent: #06b6d4;
    --danger: #ff6b6b;
    --text-light: #e7f1ff;
    --muted: #a4b2c2;
    --bg-deep: #0d1321;
  }

  body {
    background: linear-gradient(145deg, #0f172a, #111827, #0b1120);
    background-attachment: fixed;
  }

  .sa-wrap {
    max-width: 1150px;
    margin: 2.5rem auto;
    padding: 1rem;
    animation: fadeIn .8s ease;
  }

  @keyframes fadeIn {
    from { opacity:0; transform: translateY(20px); }
    to   { opacity:1; transform: translateY(0); }
  }

  /* PANEL */
  .panel {
    background: var(--glass);
    padding: 2rem;
    border-radius: 18px;
    border: 1px solid var(--border);
    backdrop-filter: blur(15px);
    box-shadow: 0 0 45px rgba(0,0,0,0.45);
    transition: .4s ease;
  }

  .panel:hover {
    transform: translateY(-4px);
    box-shadow: 0 0 70px rgba(0,0,0,0.55);
  }

  /* TITLE */
  .panel h2 {
    margin-bottom: 1.2rem;
    font-size: 1.7rem;
    color: var(--text-light);
    background: linear-gradient(90deg,var(--accent),#7c3aed);
    -webkit-background-clip: text;
    background-clip: "text";
    -webkit-text-fill-color: transparent;
  }

  /* FORM */
  .form-row {
    display: flex;
    gap: .8rem;
    flex-wrap: wrap;
  }

  .form-row input {
    flex: 1;
    padding: .75rem 1rem;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: var(--glass2);
    color: white;
    transition: .25s;
  }

  .form-row input:focus {
    border-color: var(--accent);
    box-shadow: 0 0 10px rgba(6,182,212,0.3);
    outline: none;
    background: rgba(255,255,255,0.07);
  }

  .form-row button {
    padding: .75rem 1.4rem;
    border-radius: 10px;
    border: none;
    font-weight: 700;
    cursor: pointer;
    color: white;
    background: linear-gradient(135deg,#06b6d4,#7c3aed);
    box-shadow: 0 0 15px rgba(6,182,212,0.25);
    transition: .3s ease;
  }

  .form-row button:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 25px rgba(6,182,212,0.45);
  }

  /* TABLE SECTION */
  .list {
    margin-top: 2rem;
  }

  .list h3 {
    margin-bottom: .8rem;
    color: var(--text-light);
    font-size: 1.3rem;
    font-weight: 700;
    border-left: 4px solid var(--accent);
    padding-left: .5rem;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background: var(--glass2);
    border-radius: 12px;
    overflow: hidden;
    backdrop-filter: blur(12px);
  }

  th {
    padding: 1rem;
    background: rgba(255,255,255,0.08);
    color: var(--text-light);
    text-align: left;
    font-size: .95rem;
    border-bottom: 1px solid rgba(255,255,255,0.11);
  }

  td {
    padding: .9rem 1rem;
    border-bottom: 1px solid rgba(255,255,255,0.06);
    color: var(--muted);
    transition: .25s;
  }

  tr:hover td {
    background: rgba(255,255,255,0.07);
    color: #fff;
  }

  /* ACTION BUTTONS */
  .edit-btn {
    text-decoration: none;
    background: #1e293b;
    color: #fff;
    padding: .45rem .7rem;
    border-radius: 6px;
    font-size: .9rem;
    transition: .2s;
  }

  .edit-btn:hover {
    background: #334155;
  }

  .delete-btn {
    background: var(--danger);
    border: 0;
    padding: .45rem .7rem;
    border-radius: 6px;
    color: #fff;
    font-size: .9rem;
    cursor: pointer;
    transition: .25s;
  }

  .delete-btn:hover {
    background: #ff4141;
    transform: translateY(-2px);
  }

  /* MODAL */
  .modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(5,10,20,0.85);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 99999;
    animation: fadeInBackground .3s ease;
  }

  @keyframes fadeInBackground {
    from { opacity: 0; }
    to   { opacity: 1; }
  }

  .modal-box {
    background: #141a25;
    padding: 2rem 2.2rem;
    border-radius: 15px;
    width: 350px;
    max-width: 95vw;
    text-align: center;
    color: var(--text-light);
    border: 1px solid var(--border);
    box-shadow: 0 10px 50px rgba(0,0,0,.6);
    animation: scaleIn .25s ease;
  }

  @keyframes scaleIn {
    from { opacity: 0; transform: scale(.8); }
    to   { opacity: 1; transform: scale(1); }
  }

  .modal-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    justify-content: center;
  }

  .modal-btn {
    flex: 1;
    padding: .75rem;
    border-radius: 10px;
    border: none;
    cursor: pointer;
    font-weight: 700;
    transition: .25s;
  }

  .modal-btn.confirm {
    background: #ff4747;
    color: white;
  }

  .modal-btn.confirm:hover {
    background: #ff2f2f;
  }

  .modal-btn.cancel {
    background: #1e2633;
    color: var(--muted);
  }

  .modal-btn.cancel:hover {
    background: #2c3547;
  }

  /* RESPONSIVE */
  @media(max-width: 750px) {
    .form-row {
      flex-direction: column;
    }
    table td, table th {
      padding: .75rem;
    }
  }
</style>

<div class="sa-wrap">

  <!-- MESSAGE -->
  <% if (typeof message !== 'undefined' && message) { %>
    <div id="superjc-message" style="
      background:rgba(6,182,212,0.15);
      color:#06b6d4;
      padding:1rem;
      margin-bottom:1.2rem;
      border-radius:10px;
      text-align:center;
      font-weight:700;
      backdrop-filter:blur(5px);
    ">
      <%= message %>
    </div>
  <% } %>

  <div class="panel">
    <h2>Manage SuperJC</h2>

    <!-- FORM -->
    <form action="/superadmin/manage-superjc" method="POST">
      <div class="form-row">
        <input type="email" name="email" placeholder="superjc@domain.com" required />
        <input type="password" name="password" placeholder="Password" required />
        <button type="submit">Create SuperJC</button>
      </div>
    </form>

    <!-- MODAL -->
    <div id="delete-modal" class="modal-backdrop">
      <div class="modal-box">
        <h3>Delete SuperJC?</h3>
        <p style="color:var(--muted);margin-top:.4rem">This action cannot be undone.</p>
        <div class="modal-actions">
          <button class="modal-btn confirm" id="modal-confirm-btn">Delete</button>
          <button class="modal-btn cancel" id="modal-cancel-btn">Cancel</button>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="list">
      <h3>Existing SuperJC Accounts</h3>
      <table>
        <thead>
          <tr>
            <th>Email</th>
            <th>Created</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% if (superjcs && superjcs.length) { %>
            <% superjcs.forEach(a => { %>
              <tr>
                <td><%= a.email %></td>
                <td><%= new Date(a.createdAt).toLocaleString() %></td>
                <td>
                  <a href="/superadmin/manage-superjc/edit/<%= a._id %>" class="edit-btn">Edit</a>

                  <form action="/superadmin/manage-superjc/delete" method="POST" style="display:inline" class="delete-superjc-form">
                    <input type="hidden" name="id" value="<%= a._id %>">
                    <button type="button" class="delete-btn">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3" style="padding:1rem; text-align:center; color:var(--muted);">
                No SuperJC accounts yet
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  // Delete modal
  let modal = document.getElementById('delete-modal');
  let confirmBtn = document.getElementById('modal-confirm-btn');
  let cancelBtn = document.getElementById('modal-cancel-btn');
  let formToDelete = null;

  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      formToDelete = btn.closest('form');
      modal.style.display = 'flex';
    });
  });

  confirmBtn.onclick = () => {
    if (formToDelete) formToDelete.submit();
    modal.style.display = 'none';
  };

  cancelBtn.onclick = () => {
    modal.style.display = 'none';
    formToDelete = null;
  };

  window.addEventListener('keydown', e => {
    if (e.key === 'Escape') modal.style.display = 'none';
  });
</script>
