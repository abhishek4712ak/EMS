<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Login</title>

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/04fd96b6f4.js" crossorigin="anonymous"></script>

    <style>
        :root {
            --bg1: #020617;
            --bg2: #0b1226;
            --bg3: #1e293b;
            --glass: rgba(255,255,255,0.08);
            --border: rgba(255,255,255,0.15);
            --accent: #06b6d4;
            --accent-2: #7c3aed;
            --accent-3: #f59e0b;
            --accent-4: #ef4444;
            --muted: #94a3b8;
            --error-bg: #3f1d1d;
            --success: #10b981;
        }

        * { box-sizing: border-box; }

        body {
            margin: 0;
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            background: radial-gradient(circle at top, var(--bg2), var(--bg1) 70%);
            color: #e2e8f0;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            overflow: hidden;
            position: relative;
        }

        /* Floating Background Elements */
        .floating-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .floating-bg div {
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--accent), var(--accent-2), var(--accent-3), var(--accent-4));
            opacity: 0.1;
            animation: float 6s ease-in-out infinite;
        }

        .floating-bg div:nth-child(1) {
            width: 200px;
            height: 200px;
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-bg div:nth-child(2) {
            width: 150px;
            height: 150px;
            top: 50%;
            right: 15%;
            animation-delay: 2s;
        }

        .floating-bg div:nth-child(3) {
            width: 100px;
            height: 100px;
            bottom: 20%;
            left: 20%;
            animation-delay: 4s;
        }

        .floating-bg div:nth-child(4) {
            width: 120px;
            height: 120px;
            top: 30%;
            right: 30%;
            animation-delay: 1s;
        }

        .floating-bg div:nth-child(5) {
            width: 80px;
            height: 80px;
            bottom: 40%;
            left: 50%;
            animation-delay: 3s;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }

        .login-wrap {
            width: 100%;
            max-width: 1050px;
            display: grid;
            grid-template-columns: 1fr 420px;
            gap: 2.5rem;
            align-items: center;
            animation: fadeIn 0.9s ease;
            position: relative;
            z-index: 1;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .hero {
            padding: 2.8rem;
            border-radius: 18px;
            background: linear-gradient(135deg, rgba(255,255,255,0.05), rgba(255,255,255,0.02), rgba(6,182,212,0.1));
            border: 1px solid var(--border);
            backdrop-filter: blur(20px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.55), inset 0 1px 0 rgba(255,255,255,0.1);
            transition: 0.4s ease;
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(6,182,212,0.1), transparent);
            animation: shimmer 3s infinite;
            pointer-events: none;
        }

        @keyframes shimmer {
            0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }

        .hero:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 35px 70px rgba(0,0,0,0.75), 0 0 30px rgba(6,182,212,0.3);
        }

        .brand { 
            display: flex; 
            align-items: center; 
            gap: 1rem; 
            font-weight: 800; 
            font-size: 1.4rem;
        }

        .brand i { 
            font-size: 2.4rem; 
            background: linear-gradient(135deg, var(--accent), var(--accent-2), var(--accent-3));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .hero h1 {
            margin: 1rem 0 0;
            font-size: 2.3rem;
            font-weight: 900;
            background: linear-gradient(135deg, var(--accent), var(--accent-2));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero p {
            margin-top: .8rem;
            max-width: 50ch;
            color: var(--muted);
            font-size: 1.1rem;
            line-height: 1.6rem;
        }

        .card {
            background: rgba(15, 23, 36, 0.8);
            padding: 2.3rem;
            border-radius: 18px;
            border: 1px solid var(--border);
            backdrop-filter: blur(20px);
            box-shadow: 0 25px 55px rgba(0,0,0,0.7), inset 0 1px 0 rgba(255,255,255,0.1);
            transition: 0.45s ease;
            position: relative;
            overflow: hidden;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(6,182,212,0.2), transparent);
            transition: left 0.5s;
        }

        .card:hover::before {
            left: 100%;
        }

        .card.error-shake { animation: shake 0.4s ease; }

        @keyframes shake {
            0% { transform: translateX(0); }
            25% { transform: translateX(-8px); }
            50% { transform: translateX(8px); }
            75% { transform: translateX(-5px); }
            100% { transform: translateX(0); }
        }

        .card h2 {
            font-size: 1.6rem;
            margin-bottom: 1.4rem;
            font-weight: 900;
            background: linear-gradient(135deg, var(--accent), var(--accent-2), var(--accent-3));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-group {
            position: relative;
            margin-bottom: 1.6rem;
        }

        input {
            width: 100%;
            padding: 1rem 1.2rem 1rem 1rem;
            border: 1px solid rgba(255,255,255,0.1);
            background: rgba(255,255,255,0.06);
            border-radius: 12px;
            color: #fff;
            font-size: 1rem;
            outline: none;
            transition: 0.3s ease;
            position: relative;
        }

        input:focus {
            border-color: var(--accent);
            box-shadow: 0 0 10px rgba(6,182,212,0.5);
            background: rgba(255,255,255,0.1);
        }

        label {
            position: absolute;
            top: 50%;
            left: 1rem;
            transform: translateY(-50%);
            pointer-events: none;
            color: var(--muted);
            transition: 0.3s ease;
            font-weight: 500;
        }

        input:focus + label,
        input:not(:placeholder-shown) + label {
            top: -6px;
            left: 10px;
            font-size: 0.75rem;
            background: var(--bg2);
            padding: 0 4px;
            border-radius: 5px;
            color: var(--accent);
        }

        .toggle-pass {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.1rem;
            color: var(--muted);
            cursor: pointer;
            transition: .25s;
        }

        .toggle-pass:hover { color: var(--accent); }

        .btn {
            width: 100%;
            padding: 1rem;
            border-radius: 12px;
            border: none;
            background: linear-gradient(135deg, var(--accent), var(--accent-2), var(--accent-3));
            font-weight: 900;
            font-size: 1rem;
            color: #f0f9ff;
            cursor: pointer;
            transition: 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 25px rgba(14,165,233,0.7);
        }

        .btn:active {
            transform: translateY(-1px);
        }

        .btn.loading { pointer-events: none; opacity: 0.85; }
        .btn.loading::after {
            content: "";
            width: 22px;
            height: 22px;
            border-radius: 50%;
            border: 3px solid #fff;
            border-top-color: transparent;
            position: absolute;
            top: calc(50% - 11px);
            right: calc(50% - 11px);
            animation: spin 0.7s linear infinite;
        }

        @keyframes spin { 100% { transform: rotate(360deg); } }

        .error {
            background: var(--error-bg);
            padding: .8rem 1rem;
            border-radius: 10px;
            border: 1px solid rgba(255,0,0,0.25);
            color: #ffcdcd;
            margin-bottom: 1rem;
            font-size: .95rem;
        }

        /* Ripple Effect */
        .ripple {
            position: absolute;
            border-radius: 50%;
            background: rgba(255,255,255,0.6);
            transform: scale(0);
            animation: ripple 0.6s linear;
            pointer-events: none;
        }

        @keyframes ripple {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }

        @media (max-width: 900px) {
            .login-wrap {
                grid-template-columns: 1fr;
                max-width: 520px;
                gap: 1.8rem;
            }
            .hero { text-align: center; }
            .hero p { margin: auto; }
        }

        /* Developer button styles moved to shared partial (partials/dev_button.ejs) */
    </style>
</head>

<body>
    <!-- Floating Background -->
    <div class="floating-bg">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </div>

    <main class="login-wrap">

        <!-- LEFT HERO -->
        <section class="hero">
            <div class="brand">
                <i class="fas fa-user-cog"></i>
                <span>EMS â€” Admin</span>
            </div>

            <h1>Welcome back</h1>
            <p>Sign in to verify students and participants. Also manage the students data verified...</p>
        </section>

        <!-- RIGHT LOGIN CARD -->
        <aside class="card<%= (typeof error !== '' && error) ? ' error-shake' : '' %>" id="card">
            <h2>Admin Login</h2>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error"><%= error %></div>
            <% } %>

            <form action="/admin/login" method="POST" id="loginForm">
                <div class="form-group">
                    <input id="email" name="email" type="email" required placeholder=" " />
                    <label for="email">Email</label>
                </div>

                <div class="form-group">
                    <input id="password" name="password" type="password" required placeholder=" " />
                    <label for="password">Password</label>
                </div>

                <button class="btn" type="submit" id="submitBtn"><i class="fas fa-sign-in-alt"></i> Sign in</button>
            </form>
        </aside>
    </main>

    <script>
        // Password toggle
        const passwordField = document.getElementById("password");
        const passParent = passwordField.parentNode;
        const eye = document.createElement("i");
        eye.className = "fas fa-eye toggle-pass";
        passParent.appendChild(eye);

        eye.addEventListener("click", () => {
            if (passwordField.type === "password") {
                passwordField.type = "text";
                eye.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                passwordField.type = "password";
                eye.classList.replace("fa-eye-slash", "fa-eye");
            }
        });

        // Form submission and loading
        const form = document.getElementById("loginForm");
        const btn = document.getElementById("submitBtn");

        form.addEventListener("submit", () => {
            btn.classList.add("loading");
        });

        // Ripple effect on button click
        btn.addEventListener("click", function(e) {
            const ripple = document.createElement("span");
            ripple.classList.add("ripple");
            this.appendChild(ripple);

            const rect = this.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            ripple.style.width = ripple.style.height = size + "px";
            ripple.style.left = e.clientX - rect.left - size / 2 + "px";
            ripple.style.top = e.clientY - rect.top - size / 2 + "px";

            setTimeout(() => {
                ripple.remove();
            }, 600);
        });

        // Color change on input focus
        const inputs = document.querySelectorAll("input");
        inputs.forEach(input => {
            input.addEventListener("focus", () => {
                input.style.borderColor = "var(--accent-3)";
                input.style.boxShadow = "0 0 10px rgba(245,158,11,0.5)";
            });
            input.addEventListener("blur", () => {
                input.style.borderColor = "rgba(255,255,255,0.1)";
                input.style.boxShadow = "none";
            });
        });
    </script>
    <%- include('../partials/dev_button.ejs') %>
</body>
</html>
