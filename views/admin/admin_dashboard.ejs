<%- include('./admin_header.ejs') %>


<style>
  :root {
    --c-glass: rgba(255, 255, 255, 0.06);
    --c-glass-2: rgba(255, 255, 255, 0.04);
    --c-border: rgba(255, 255, 255, 0.15);
    --c-accent: #06b6d4;
    --c-accent-2: #7c3aed;
    --c-muted: #9ca3af;
    --c-text-light: #f0f6ff;
    --c-bg: linear-gradient(160deg, #0d1321, #0b1120, #111827 60%);
    --radius-large: 22px;
    --radius-medium: 16px;
  }

  body {
    background: var(--c-bg);
    min-height: 100vh;
    padding-bottom: 2rem;
  }

  @keyframes softFade {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .sa-container {
    max-width: 1400px;
    margin: 2.5rem auto;
    padding: 1rem;
    animation: softFade 0.8s ease;
  }

  .panel {
    background: var(--c-glass);
    border-radius: var(--radius-large);
    padding: 2rem;
    border: 1px solid var(--c-border);
    backdrop-filter: blur(18px) brightness(1.1);
    position: relative;
    overflow: hidden;
    transition: .35s ease;
    box-shadow: 0 0 60px rgba(0,0,0,0.45);
  }

  .panel::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 2px;
    background: linear-gradient(135deg, var(--c-accent), var(--c-accent-2));
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    -webkit-mask-composite: xor;
    opacity: .08;
    transition: .4s;
  }

  .panel:hover::before {
    opacity: 0.20;
  }

  .panel:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 80px rgba(0,0,0,0.55);
  }

  .sa-hero {
    background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.04));
    border-radius: var(--radius-large);
    padding: 2rem;
    border: 1px solid var(--c-border);
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
    box-shadow: inset 0 0 30px rgba(255,255,255,0.06);
    animation: softFade 1.1s ease;
  }

  .avatar {
    width: 85px;
    height: 85px;
    border-radius: 20px;
    background: linear-gradient(145deg, var(--c-accent), var(--c-accent-2));
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2.6rem;
    font-weight: 900;
    color: white;
    box-shadow: 0 0 25px rgba(6,182,212,0.25);
    transition: .3s ease;
  }

  .avatar:hover {
    transform: scale(1.05) rotate(3deg);
  }

  .sa-hero h1 {
    font-size: 2.1rem;
    font-weight: 900;
    margin: 0;
    background: linear-gradient(90deg, var(--c-accent), var(--c-accent-2));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .sa-hero p {
    color: var(--c-muted);
    font-size: 1rem;
    margin-top: .2rem;
  }

  .metrics-grid {
    margin-top: 2rem;
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .metric-card {
    background: var(--c-glass-2);
    padding: 1.5rem;
    border-radius: var(--radius-medium);
    border: 1px solid var(--c-border);
    position: relative;
    overflow: hidden;
    cursor: pointer;
    transition: .3s ease;
    transform-style: preserve-3d;
  }

  .metric-card::before {
    content: "";
    position: absolute;
    top: -40%;
    left: -30%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(6,182,212,0.22), transparent 65%);
    opacity: 0;
    transition: .4s ease;
  }

  .metric-card:hover::before {
    opacity: 1;
    transform: scale(1.15);
  }

  .metric-card:hover {
    transform: translateY(-8px) scale(1.03);
    box-shadow: 0 0 50px rgba(6,182,212,0.25);
    border-color: var(--c-accent);
  }

  .label {
    color: var(--c-muted);
    font-size: 1rem;
    font-weight: 600;
  }

  .value {
    margin-top: .45rem;
    font-size: 2.6rem;
    font-weight: 900;
    background: linear-gradient(90deg, var(--c-accent), var(--c-accent-2));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .meta {
    margin-top: .4rem;
    color: var(--c-muted);
    font-size: .9rem;
  }

  @media(max-width: 900px) {
    .sa-hero {
      flex-direction: column;
      text-align: center;
    }
    .avatar {
      margin-bottom: 1rem;
    }
  }

  /* Developer button styles moved to shared partial (partials/dev_button.ejs) */
</style>

<div class="sa-container">
  <div class="panel">

    <!-- HERO -->
    <div class="sa-hero">
      <div class="left">
        <div class="avatar"><%= username ? username.charAt(0).toUpperCase() : 'A' %></div>
        <div>
          <h1>Welcome, <%= username || 'Admin' %></h1>
          <p>Your dashboard overview</p>
  </div>
</div>
    </div>

    <!-- METRICS -->
    <div class="metrics-grid">
      <div class="metric-card">
        <div class="label">Registered Students</div>
        <div class="value"><%= registeredCount ?? '—' %></div>
        <div class="meta">Total students in system</div>
      </div>

      <div class="metric-card">
        <div class="label">Verified Students</div>
        <div class="value"><%= verifiedCount ?? '—' %></div>
        <div class="meta">Students verified</div>
      </div>

      <div class="metric-card">
        <div class="label">Unverified Students</div>
        <div class="value"><%= unverifiedCount ?? '—' %></div>
        <div class="meta">Pending verification</div>
      </div>
    </div>

  </div>
</div>
