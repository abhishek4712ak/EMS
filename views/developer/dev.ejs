      line-height: 1.9;
      color: #a0b0ff;
      opacity: 0.95;
      margin-bottom: 3rem;
      max-width: 90%;
    }

    /* Contact Info */
    .info {
      width: 100%;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
      margin: 2rem 0;
    }

    .info-item {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1.5rem;
      padding: 1.2rem 1.8rem;
      background: rgba(20, 30, 60, 0.7);
      border-radius: 24px;
      border: 1px solid rgba(0, 217, 255, 0.4);
      transition: all 0.6s ease;
      font-size: clamp(1rem, 2.5vw, 1.15rem);
    }

    .info-item:hover {
      background: rgba(157, 78, 221, 0.4);
      transform: translateY(-8px) scale(1.03);
      border-color: #ff006e;
      box-shadow: 0 20px 50px rgba(255, 0, 110, 0.5);
    }

    .info-item i {
      font-size: clamp(1.6rem, 4vw, 2rem);
      color: #00d9ff;
      text-shadow: 0 0 20px rgba(0, 217, 255, 0.8);
      min-width: 40px;
    }

    /* Social Icons */
    .socials {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: clamp(1.5rem, 4vw, 2.5rem);
      flex-wrap: wrap;
      margin: 2.5rem 0;
    }

    .socials a {
      width: clamp(60px, 12vw, 70px);
      height: clamp(60px, 12vw, 70px);
      font-size: clamp(1.6rem, 4vw, 2.1rem);
      background: rgba(157, 78, 221, 0.2);
      border: 3px solid #9d4edd;
      border-radius: 50%;
      display: grid;
      place-items: center;
      color: #c0ffee;
      transition: all 0.6s ease;
      box-shadow: 0 0 30px rgba(157, 78, 221, 0.5);
    }

    .socials a:hover {
      transform: translateY(-20px) scale(1.3) rotate(15deg);
      background: linear-gradient(135deg, #00d9ff, #ff006e);
      box-shadow: 0 25px 60px rgba(255, 0, 110, 0.9);
      color: #000;
    }

    /* Floating Message Button */
    .msg-btn {
      position: fixed;
      bottom: clamp(20px, 5vw, 40px);
      right: clamp(20px, 5vw, 40px);
      width: clamp(70px, 12vw, 90px);
      height: clamp(70px, 12vw, 90px);
      font-size: clamp(2.2rem, 5vw, 3.2rem);
      background: linear-gradient(135deg, #9d4edd, #ff006e);
      color: white;
      border-radius: 50%;
      display: grid;
      place-items: center;
      box-shadow: 0 20px 60px rgba(255, 0, 110, 0.9);
      z-index: 1000;
      animation: floatBtn 3s ease-in-out infinite, pulse 2s infinite;
      transition: all 0.5s ease;
    }

    .msg-btn:hover {
      transform: scale(1.3) rotate(20deg);
      box-shadow: 0 0 100px rgba(255, 0, 110, 1.2);
    }

    @keyframes floatBtn {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      50% { transform: translateY(-15px) rotate(10deg); }
    }

    @keyframes pulse {
      0%, 100% { box-shadow: 0 20px 60px rgba(255, 0, 110, 0.9); }
      50% { box-shadow: 0 20px 80px rgba(255, 0, 110, 1); }
    }

    /* Back Button */
    .back {
      position: fixed;
      top: clamp(16px, 4vw, 32px);
      left: clamp(16px, 4vw, 32px);
      color: #c0ffee;
      text-decoration: none;
      font-weight: 700;
      font-size: clamp(1rem, 2.5vw, 1.2rem);
      padding: clamp(0.8rem, 2vw, 1rem) clamp(1.2rem, 3vw, 1.8rem);
      background: rgba(10, 15, 30, 0.8);
      border-radius: 50px;
      border: 1px solid rgba(0, 217, 255, 0.5);
      transition: all 0.4s ease;
      z-index: 1000;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .back:hover {
      background: rgba(157, 78, 221, 0.7);
      transform: translateX(-8px) scale(1.05);
    }

    /* Enhanced Mobile Responsiveness */
    @media (max-width: 640px) {
      .blob { filter: blur(100px); opacity: 0.35; }
      .card { padding: 2.5rem 1.8rem; border-radius: 32px; }
      .avatar { width: 140px; height: 140px; margin-bottom: 2rem; }
      .info-item { padding: 1rem 1.5rem; gap: 1rem; }
      .socials { gap: 1.5rem; }
      body { padding: 12px; }
    }

    @media (max-width: 480px) {
      .info { gap: 1rem; }
      .info-item { flex-direction: column; text-align: center; padding: 1.2rem; }
      .info-item span { font-size: 1rem; }
    }
  </style>
