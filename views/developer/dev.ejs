  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    body {
      min-height: 100vh;
      background: #000814;
      font-family: 'Inter', sans-serif;
      color: #e2e8f0;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 16px;
      overflow: hidden;
      position: relative;
    }

    /* Floating Neon Blobs */
    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(140px);
      opacity: 0.45;
      animation: float 30s infinite ease-in-out;
      z-index: 0;
    }
    .blob1 { width: 900px; height: 900px; background: #00d9ff; top: -400px; left: -400px; }
    .blob2 { width: 1100px; height: 1100px; background: #9d4edd; bottom: -500px; right: -500px; animation-delay: 15s; }
    .blob3 { width: 700px; height: 700px; background: #ff006e; top: 40%; left: 50%; transform: translate(-50%, -50%); animation-delay: 8s; opacity: 0.35; }

    @keyframes float {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      25% { transform: translate(150px, -120px) rotate(15deg); }
      50% { transform: translate(-100px, 150px) rotate(-10deg); }
      75% { transform: translate(80px, 100px) rotate(20deg); }
    }

    /* Particle Sparkles */
    .particles {
      position: absolute;
      inset: 0;
      pointer-events: none;
      z-index: 1;
    }
    .particle {
      position: absolute;
      background: #fff;
      border-radius: 50%;
      opacity: 0;
      animation: sparkle linear infinite;
    }
    @keyframes sparkle {
      0% { opacity: 0; transform: scale(0); }
      50% { opacity: 0.8; }
      100% { opacity: 0; transform: scale(1.5); }
    }

    /* Main Card */
    .card {
      background: rgba(10, 15, 30, 0.85);
      backdrop-filter: blur(60px);
      -webkit-backdrop-filter: blur(60px);
      border-radius: 40px;
      border: 2px solid rgba(157, 78, 221, 0.5);
      padding: clamp(2.5rem, 6vw, 5rem) clamp(2rem, 5vw, 4rem);
      width: 100%;
      max-width: 560px;
      text-align: center;
      box-shadow: 
        0 30px 100px rgba(0, 0, 0, 0.8),
        0 0 120px rgba(157, 78, 221, 0.6),
        inset 0 0 100px rgba(0, 217, 255, 0.2);
      position: relative;
      z-index: 2;
      animation: appear 2.5s ease-out;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .card::before {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0; height: 8px;
      background: linear-gradient(90deg, #00d9ff, #9d4edd, #ff006e, #c0ffee);
      background-size: 400%;
      animation: shine 5s linear infinite;
    }

    @keyframes appear {
      from { opacity: 0; transform: scale(0.8) translateY(80px); }
      to { opacity: 1; transform: scale(1) translateY(0); }
    }

    @keyframes shine {
      0% { background-position: 0%; }
      100% { background-position: 400%; }
    }

    /* Avatar */
    .avatar {
      width: 180px;
      height: 180px;
      border-radius: 50%;
      border: 8px solid #9d4edd;
      box-shadow: 
        0 0 80px rgba(157, 78, 221, 1),
        0 0 0 15px rgba(0, 217, 255, 0.4),
        inset 0 0 40px rgba(255, 0, 110, 0.3);
      margin-bottom: 2.5rem;
      transition: all 0.6s ease;
      animation: avatarPulse 5s infinite alternate;
    }
    .avatar:hover { 
      transform: scale(1.15) rotate(5deg); 
      box-shadow: 
        0 0 120px rgba(157, 78, 221, 1.2),
        0 0 0 25px rgba(0, 217, 255, 0.6);
    }

    @keyframes avatarPulse {
      0% { box-shadow: 0 0 80px rgba(157, 78, 221, 1), 0 0 0 15px rgba(0, 217, 255, 0.4); }
      100% { box-shadow: 0 0 100px rgba(157, 78, 221, 1.2), 0 0 0 20px rgba(0, 217, 255, 0.5); }
    }

    /* Text */
    h1 {
      font-size: clamp(2.5rem, 7vw, 3.8rem);
      font-weight: 900;
      background: linear-gradient(90deg, #00d9ff, #9d4edd, #ff006e, #ffffff);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 0.6rem;
      letter-spacing: 2px;
      text-shadow: 0 0 30px rgba(0, 217, 255, 0.8);
    }

    .title {
      font-size: clamp(1.3rem, 4vw, 1.7rem);
      color: #c0ffee;
      font-weight: 700;
      margin-bottom: 1.5rem;
      letter-spacing: 3px;
      text-shadow: 0 0 25px rgba(192, 255, 238, 0.7);
